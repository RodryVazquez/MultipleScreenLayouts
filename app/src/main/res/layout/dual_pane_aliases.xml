<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Creamos el fragmento, indicamos ID, nombre, importamos el namespace de tools y
        asignamos el layout al fragmento-->
    <fragment
        android:id="@+id/fragment_list"
        android:name="com.example.rodryvazquez.practiceassignment01.Fragments.ListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_list"
        android:layout_weight="1"/>

    <fragment
        android:id="@+id/fragment_details"
        android:name="com.example.rodryvazquez.practiceassignment01.Fragments.DetailFragment"
        tools:layout="@layout/fragment_detail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>
</LinearLayout>